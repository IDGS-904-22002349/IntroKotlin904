<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ADD8E6">

    <TextView
    android:id="@+id/titleTextView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Diccionarios Ingles espaÃ±ol"
    android:textColor="#8A2BE2"
    android:textSize="28sp"
    android:textStyle="bold"
    app:layout_constraintBottom_toTopOf="@+id/btn_capturar"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_chainStyle="packed"
    android:layout_marginBottom="60dp" />

    <Button
        android:id="@+id/btn_capturar"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="Capturar Palabras"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:backgroundTint="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/btn_buscar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleTextView"
        android:layout_marginBottom="30dp" />

    <Button
        android:id="@+id/btn_buscar"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="Buscar Palabras"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:backgroundTint="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_capturar" />

</androidx.constraintlayout.widget.ConstraintLayout>